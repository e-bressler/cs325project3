.logo
  = link_to(root_path) do
    =image_tag('logo.png', width: '100%', height: '100%')

.box
  %h1 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .error_messages= devise_error_messages!
    .row
      .form-group.col-md-4
        = f.label :email
        %br
        = f.email_field :email, autofocus: true, class: "form-control", placeholder: 'example@web.com'
    .row
      .form-group.col-md-4
        = f.label :username
        %br
        = f.text_field :username, class: "form-control", placeholder: 'janedoe'
    .row
      .form-group.col-md-4
        = f.label :password
        - if @minimum_password_length
          %em (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", class: "form-control"
    .row
      .form-group.col-md-4
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
    .actions
      = f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"
  = render "devise/shared/links"